@page
@model LoginModel
<div class="login-block w-100 vh-100">
    <div class="login-wrapper px-2">
        <div class="pt-md-5 pb-md-4 pb-3 pt-4 mb-md-3">
            <a href="/"><img src="~/assets/logo.png" /></a>
        </div>
        <div class="login-section-wrapper d-flex">
            <div class="mx-auto my-0">
                <div class="login-img">
                    <img src="~/assets/login.png" />
                </div>
                <div class="login-contact-card-desktop justify-content-around p-5">
                    <div class="text-white">
                        <h4>Address</h4>
                        <p class="text-white">
                            Marine Drive <br />
                            Vancouver, BC XXX XXX
                        </p>
                    </div>
                    <div class="text-white">
                        <h4>Contact</h4>
                        <p class="text-white">
                            info@applied.com <br />
                            +1-123-456-7890
                        </p>
                    </div>
                </div>
            </div>
            <div class="mx-sm-auto my-sm-0">
                <div class="pt-4 pt-lg-2 text-sm-center">
                    <h1>Welcome to AppliedAppliance!</h1>
                    <h5 class="pt-3">Sign in to access the portal</h5>
                </div>
                <div asp-validation-summary="All" class="has-error"></div>
                <div>
                    <form id="account" method="post">
                        <div class="form-group pt-4">
                            <label asp-for="Input.Email"></label>
                            <div class="input-group flex-nowrap">
                                <div class="input-group-prepend">
                                    <span class="input-group-text border-right-0 bg-white" id="addon-wrapping"><i class="fas fa-lg fa-envelope"></i></span>
                                </div>
                                <input asp-for="Input.Email" class="form-control  border-left-0" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <div class="input-group flex-nowrap">
                                <div class="input-group-prepend">
                                    <span class="input-group-text border-right-0 bg-white" id="addon-wrapping"><i class="fas fa-lg fa-unlock"></i></span>
                                </div>
                                <input asp-for="Input.Password" class="form-control border-left-0" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between font-weight-bold">
                            <div class="checkbox checkbox-info checkbox-circle text-right pr-2">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" class="align-text-top mr-1" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <a class="danger-color" href="/ForgotPassword">Forgot Password?</a>
                            </div>
                        </div>
                        <div class="mt-5 d-flex align-items-center justify-content-center">
                            <button type="submit" class="btn btn-primary font-weight-bold">Login</button>
                        </div>
                    </form>
                    <div class="mt-3 d-flex align-items-center justify-content-center">
                        Are you a new agent?
                        <a href="/Register"><span class="secondary-color-blue font-weight-bold ml-2">Register now</span></a>
                    </div>
                    <div class="login-contact-card-mobile flex-column flex-sm-row justify-content-sm-around pt-5">
                        <div class="text-black">
                            <h4>Address</h4>
                            <p class="">
                                300-960 Quayside Drive <br />
                                New Westminster, BC V3M 6G2
                            </p>
                        </div>
                        <div class="text-black">
                            <h4>Contact</h4>
                            <p class="">
                                info@appliedappliance.com <br />
                                +1-604-915-7288
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="login-copywrite text-center pt-5 pt-xl-0 py-2">
            <p>© 2021 - AppliedAppliance</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}